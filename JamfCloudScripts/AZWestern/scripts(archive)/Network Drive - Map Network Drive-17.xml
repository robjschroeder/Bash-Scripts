<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<script>
    <id>17</id>
    <name>Network Drive - Map Network Drive</name>
    <category>Network Share Mappings</category>
    <filename>Network Drive - Map Network Drive</filename>
    <info></info>
    <notes></notes>
    <priority>After</priority>
    <parameters>
        <parameter4>Protocol {smb:afp}</parameter4>
        <parameter5>FQDN Server</parameter5>
        <parameter6>ShareName</parameter6>
    </parameters>
    <os_requirements></os_requirements>
    <script_contents>#!/bin/sh

UID1=$(id -u $3)
    echo "UID: $UID1"
protocol="$4" # This is the protocol to connect with (afp | smb)
    echo "Protocol: $4"
serverName="$5"   # This is the address of the server, e.g. my.fileserver.com
    echo "Server: $5"
shareName="$6"    # This is the name of the share to mount
    echo "Sharename: $6"
      # Mount the drive 
        mount_script=`/usr/bin/osascript  &gt; /dev/null &lt;&lt; EOT
        tell application "Finder"
        mount volume "$protocol://${serverName}/${shareName}"
        end tell
EOT`
exit</script_contents>
    <script_contents_encoded></script_contents_encoded>
</script>